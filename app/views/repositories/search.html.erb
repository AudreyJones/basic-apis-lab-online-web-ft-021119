<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
<%= @resp %>
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @repo %>
  
    <p><%= Name: @resp.body[:name] %><p>
  <% end %> %>
</div>